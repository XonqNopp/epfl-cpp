<univers>
	<temps>-1</temps>
	<pasdetemps>1</pasdetemps>
	<camera>
		<oeil>0 0 15</oeil>
		<visee>0 0 0</visee>
		<verticale>0 1 0</verticale>
	</camera>
	<!-- les positions:
	a = x
	b = a / sqrt( 3 )
	c = 2 a / sqrt( 3 )
	
	( 0 c ) ( -a -b ) ( a -b )
	-->
	<corps>
		<position>0 2*5*pow(3,-0.5) 0</position>
		<vitesse>0 0 0</vitesse>
		<masse>1e9</masse>
		<couleur>1 0 0 1</couleur>
	</corps>
	<corps>
		<position>5 -5*pow(3,-0.5) 0</position>
		<vitesse>0 0 0</vitesse>
		<masse>1e9</masse>
		<couleur>0 1 0 1</couleur>
	</corps>
	<corps>
		<position>-5 -5*pow(3,-0.5) 0</position>
		<vitesse>0 0 0</vitesse>
		<masse>1e9</masse>
		<couleur>0 0 1 1</couleur>
	</corps>
</univers>